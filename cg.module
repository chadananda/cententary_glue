        'og:title' => 'The Daily Centenarian',
        'og:type' => 'website',
        'fb:app_id' => '406308229385243',
        'og:site_name' => variable_get('site_name', ''),
        'og:description' => "Your source for news, stories, and personal recollections about 'Abdu'l-Bahá in 1912.",
