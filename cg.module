        drupal_set_html_head('<meta property="' . $property . '" content="' . str_replace('"', "'", strip_tags($value)) . '" />');
      }

      // Parse view dates, etc.
      $prevlink = $nextlink = l('(back to today)', 'daily');
      //$testdate = ($date == '1912-01-01T00:00:00') ? '1913-01-01T00:00:00' : $date;
